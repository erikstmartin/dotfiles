[user]
	name = Erik St. Martin
	email = alakriti@gmail.com
[apply]
  whitespace=warn
[color]
	branch = auto
	diff = auto
	status = auto
  ui=true
[help]
  autocorrect = 1
[status]
  submodule = 1
[push]
  # Only push branches that have been set up to track a remote branch.
  default = current
[alias]
  rl = reflog
  ls = log -S
  s = status --short
  a = add
  c = commit -m
  au = add -u :/
  rm = rm
  b = branch
  m = merge --no-ff
  mff = merge --ff-only
  p = pull
  pu = push
  f = fetch
  st = stash
  stp = stash pop
  d = diff
  co = checkout
  l = log --graph --topo-order --pretty='%w(100,0,6)%C(yellow)%h%C(bold)%C(black)%d %C(cyan)%ar %C(green)%an%n%C(bold)%C(white)%s %N' --abbrev-commit
  unstage = reset HEAD
  staged = diff --cached
  unstaged = diff
[core]
  excludesfile = ~/.gitignore
  editor = nvim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  side-by-side = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
